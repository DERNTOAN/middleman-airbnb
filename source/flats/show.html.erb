<% flat = data.flats[owner] %>
<div class="banner banner-half" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug %>');">
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-lg-6">
      <div class="header-flat-details">
        <div class="header-flat-owner">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "avatar-large" %>
          <p><%= owner %></p>
        </div>
        <div class="header-flat-description">
          <h3><%= flat.description %></h3>
          <p><%= flat.city_name %></p>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-6">
      <div class="card">
        <div class="card-form">
          <h3>Book this flat</h3>
          <form>
            <div class="form-group form-inline">
              <input type="date" class="form-control" id="check-in" placeholder="01/01/2019">
              <input type="date" class="form-control" id="check-out" placeholder="01/01/2019">
            </div>
            <select class="form-control form-control-lg">
              <option>1 guest</option>
              <option>2 guest</option>
              <option>3 guest</option>
              <option>4 guest</option>
            </select>
            <input type="submit" class="btn btn-primary" value="Book now!" style="width: 100%"
          </form>
        </div>
      </div>
    </div>
  </div>
